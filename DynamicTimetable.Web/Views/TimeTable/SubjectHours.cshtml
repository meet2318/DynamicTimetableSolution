@model List<SubjectHoursViewModel>

@{
    ViewBag.Title = "Enter Subject Hours";
    var input = ViewBag.InputData as TimeTableInputViewModel;
}

<h2 class="text-center mb-4">Enter Subject Names and Hours</h2>

<form asp-action="Generate" method="post">
    <!-- Hidden fields for input model -->
    <input type="hidden" name="input.WorkingDays" value="@input.WorkingDays" />
    <input type="hidden" name="input.SubjectsPerDay" value="@input.SubjectsPerDay" />
    <input type="hidden" name="input.TotalSubjects" value="@input.TotalSubjects" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject Name</th>
                <th>Total Hours</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" name="subjects[@i].SubjectName" value="@Model[i].SubjectName" class="form-control" required />
                    </td>
                    <td>
                        <input type="number" name="subjects[@i].Hours" class="form-control" min="1" required />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Generate Time Table</button>
    </div>
</form>
