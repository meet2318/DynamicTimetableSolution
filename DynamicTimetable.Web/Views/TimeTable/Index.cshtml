@model TimeTableInputViewModel
@{
    ViewBag.Title = "Enter Time Table Details";
}

<h2 class="text-center mb-4">Enter Time Table Details</h2>

<form asp-action="SubjectHours" method="post" class="row g-3">
    <div class="col-md-4">
        <label asp-for="WorkingDays" class="form-label">Working Days (1–7)</label>
        <input asp-for="WorkingDays" class="form-control" type="number" min="1" max="7" />
        <span asp-validation-for="WorkingDays" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="SubjectsPerDay" class="form-label">Subjects per Day (1–8)</label>
        <input asp-for="SubjectsPerDay" class="form-control" type="number" min="1" max="8" />
        <span asp-validation-for="SubjectsPerDay" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="TotalSubjects" class="form-label">Total Subjects (min 1)</label>
        <input asp-for="TotalSubjects" class="form-control" type="number" min="1" />
        <span asp-validation-for="TotalSubjects" class="text-danger"></span>
    </div>

    <div class="col-12 text-center mt-3">
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>
